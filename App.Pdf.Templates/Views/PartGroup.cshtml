@model App.Core.Models.Data.PartGroup
@{
    Layout = "Shared/_Layout.cshtml";
}

<div style="width: calc(100% - 30px); background-color: darkcyan; padding: 15px; color: #fff;">
    <div style="float: left;">
        @Model.Name section
    </div>
    
    <div style="clear: both;"></div>
</div>

<div style="width: 100%;">
    @foreach (var page in Model.Pages)
    {
        <div style="width: 80%; border: 1px solid darkcyan; background-color: darkcyan; color: #fff; margin: 10px auto;">
            <div style="padding-left: 10px;">
                @($"{page.Name} {(Model.Pages.Count > 1 ? $" - Part {page.SubSection}" : "")}")
            </div>
        </div>
    }
</div>